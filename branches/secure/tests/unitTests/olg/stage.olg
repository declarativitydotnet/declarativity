stage("TOKENIZER", inputString, outToken).

materialize(inputs, infinity, infinity, keys(1,2)).

inputs("localhost:10000", " a b c d").
inputs("localhost:10000", " 1 2 3 4").
inputs("localhost:10000", "a b c d ").
inputs("localhost:10000", "1 2 3 4 ").

r1 inputString(@NI, Delimiters, String) :-
	periodic(@NI, E, 0, 1),
 	inputs(@NI, String),
	Delimiters := " ".

r2 foo(@A) :- outToken(@A).
watchmod(outToken, "c").
